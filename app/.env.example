# ARVTON Backend — Environment Variables

# Server
HOST=0.0.0.0
PORT=8000
BASE_URL=http://localhost:8000

# CORS (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:*,https://yourdomain.com

# Storage
ARVTON_OUTPUT_DIR=outputs

# S3 (optional — for cloud deployment)
ARVTON_S3_BUCKET=
ARVTON_S3_REGION=us-east-1
ARVTON_S3_PREFIX=arvton-outputs/
ARVTON_CDN_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# GPU
CUDA_VISIBLE_DEVICES=0
